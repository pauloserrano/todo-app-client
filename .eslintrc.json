{
	"env": {
		"browser": true,
		"es2020": true
	},
	"extends": [
		"react-app",
		"react-app/jest"
	],
	//"overrides": [],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"root": true,
	"plugins": [
		"react",
		"@typescript-eslint"
	],
	"rules": {
		"react-hooks/exhaustive-deps": "off",
		"react-hooks/rules-of-hooks": "off",
		"no-console": "warn",
		"linebreak-style": 0,
		"indent": [
			"error",
			2,
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"never"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"key-spacing": [
			"error",
			{
				"beforeColon": false
			}
		],
		"padded-blocks": [
			"error",
			"never"
		],
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1
			}
		],
		"lines-between-class-members": [
			"error",
			"always",
			{
				"exceptAfterSingleLine": true
			}
		],
		"space-before-function-paren": [
			"error",
			"never"
		],
		"space-before-blocks": [
			"error",
			"always"
		],
		"eol-last": [
			"error",
			"always"
		],
		"arrow-spacing": [
			"error",
			{
				"before": true,
				"after": true
			}
		]
	}
}